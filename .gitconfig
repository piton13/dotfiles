# This is the config file, and
# a '#' or ';' character indicates
# a comment
[core]
    autocrlf = input
    editor = vim
    # logAllRefUpdates = true ;to enable reflogs
[user]
	name = Igor Mykhaylyuk
#    email = igor13luk@gmail.com
	email = igor_mykhaylyuk@epam.com
[alias]
    co = checkout
	br = branch
    cp = cherry-pick
	ci = commit
    ciam = commit --amend
    cia = commit --amend --no-edit
    dif = diff HEAD
	st = status
    rbi = !bash -c \"git rebase -i HEAD~$1\"
    review = !bash -c \"git push origin HEAD:refs/for/${1:-develop}\"
    pr = "!branch=\"$(git symbolic-ref HEAD 2> /dev/null | cut -b 12-)\" git pull origin $branch"
    #pr = !bash -c \"branch=$(git symbolic-ref HEAD 2> /dev/null | cut -b 12-) git pull origin $branch\"
    #pr = !bash -c \"git symbolic-ref HEAD 2> /dev/null | cut -b 12- | git pull origin $1\"
#    rp = !bash -c \"git symbolic-ref HEAD 2> /dev/null | cut -b 12-\" | git push origin $1
#    pr = !bash -c \"git pull $1\"
    rp = !bash -c \"git push origin HEAD\"
#    rp = !bash -c \"git push $1\"
#	up = "!git remote update -p; git merge --ff-only @{u}"
[merge]
tool = sublimerge

[mergetool "sublimerge"]
cmd = subl -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
trustExitCode = false

[diff]
tool = sublimerge

[difftool "sublimerge"]
cmd = subl -n --wait \"$REMOTE\" \"$LOCAL\" --command \"sublimerge_diff_views {\\\"left_read_only\\\": true, \\\"right_read_only\\\": true}\"
[push]
	default = current
[pull]
	rebase = true
